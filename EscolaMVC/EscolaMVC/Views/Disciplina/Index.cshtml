@model IEnumerable<EscolaMVC.Models.Disciplinas>

@{
    ViewBag.Title = "Index";
}

<h2>Lista De Disciplinas</h2>

<p>
    @Html.ActionLink("Criar Novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Descrição
        </th>
        <th>
            Cargo Horaria
        </th>
        <th>
            Descrição Do Curso
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DISDESCRIACAO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DISCH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cursos.CURSODESCRICAO)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.DISID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.DISID }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.DISID })
        </td>
    </tr>
}

</table>
